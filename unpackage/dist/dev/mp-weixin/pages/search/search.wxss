  padding: 15rpx 0;
}
.trendingSearch .title.data-v-c10c040c {
  font-size: 32rpx;
  color: #535353;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #cecece;
}
.trendingSearch .trendContent.data-v-c10c040c {
  padding: 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
